<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9A825"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MatchMania">

    <TextView
        android:id="@+id/passedUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#F9A825"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:text="@string/username"
        android:textColor="#3F00FF"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F9A825"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:weightSum="5">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F9A825"
        android:backgroundTint="#F9A825"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:weightSum="5">


        <ImageView
            android:id="@+id/back6"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back7"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back8"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back9"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

        <ImageView
            android:id="@+id/back10"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:background="#F9A825"
            android:scaleType="center"
            android:scrollbarTrackVertical="@drawable/blueback"
            android:src="@drawable/blueback">

        </ImageView>

    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#4485BF"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Attempts remianing: "
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>
